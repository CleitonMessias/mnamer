{
    "editor.formatOnSave": true,
    "editor.rulers": [
        80
    ],
    "files.exclude": {
        "**/*.pyc": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.pytest_cache/": true,
        "**/.svn": true,
        "**/__pycache__": true,
        "*.egg-info": true,
        "*.egg-info/": true,
        ".idea": true,
        "demo": true
    },
    "python.formatting.provider": "black",
    "python.pythonPath": "venv/bin/python",
    "python.linting.pylintArgs": [
        "--disable",
        "bare-except,expression-not-assigned,line-too-long"
    ]
}